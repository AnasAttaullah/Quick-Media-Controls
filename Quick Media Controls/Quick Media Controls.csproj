<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
		<UseWPF>true</UseWPF>
		<RootNamespace>Quick_Media_Controls</RootNamespace>
		<Nullable>enable</Nullable>
		<AssemblyName>Quick Media Controls</AssemblyName>
		<Title>Quick Media Controls</Title>
		<Description>A quick media controls flyout for Windows</Description>
		<Company>Anas Attaullah</Company>
		<Copyright>Copyright © 2026 Anas Attaullah</Copyright>
		<Version>1.1.1</Version>
		<ApplicationIcon>Assets\Icons\applicationIcon.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="WPF-UI" Version="4.2.0" />
		<PackageReference Include="WPF-UI.Tray" Version="4.2.0" />
		<PackageReference Include="Autoupdater.NET.Official" Version="1.9.2" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Assets\placeholder.jpg" />
		<Resource Include="Assets\Icons\pauseLight.ico" />
		<Resource Include="Assets\Icons\pauseDark.ico" />
		<Resource Include="Assets\Icons\playLight.ico" />
		<Resource Include="Assets\Icons\playDark.ico" />
		<Resource Include="Assets\Icons\noMediaLight.ico" />
		<Resource Include="Assets\Icons\noMediaDark.ico" />
	</ItemGroup>

</Project>
